@{
    Layout = "_Layout";
}

@using SweetFactory.Models;
@model List<SweetFactory.Models.Flavor>;

<h1>Flavors!</h1>

@if (@Model.Count == 0)
{
    <h4>You haven't added any flavors yet!</h4>
}


@foreach (Flavor flavor in Model)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <p class="card-text">@($"{flavor.FlavorName}")</p>
            <p>@Html.ActionLink("View treats that come in this flavor", "Details", new { id = flavor.FlavorID })</p>
        </div>
    </div>

}
